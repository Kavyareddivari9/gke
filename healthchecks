resource "kubernetes_deployment" "my_app" {
  metadata {
    name = "my-app"
    namespace = "default"
  }

  spec {
    replicas = 3
    selector {
      match_labels = {
        app = "my-app"
      }
    }
    template {
      metadata {
        labels = {
          app = "my-app"
        }
      }
      spec {
        containers {
          name = "my-app-container"
          image = "my-app-image"
          # Other container configuration...

          readiness_probe {
            http_get {
              path = "/health"
              port = 8080
            }
            initial_delay_seconds = 10
            period_seconds = 5
          }

          liveness_probe {
            http_get {
              path = "/health"
              port = 8080
            }
            initial_delay_seconds = 30
            period_seconds = 10
          }
        }
      }
    }
  }
}
